<!-- namespace속성 : 아래에서 작성한 SQL을 호출할 때 같이 사용된다. -->
<sqlMap namespace="eventboard">

	 <select id="selectListAll" resultClass="EventBoardVO">
 		select
 				event_no,
 				event_title,
 				event_sdate,
 				event_edate,
 				event_image
		  from
			  	event_board 
