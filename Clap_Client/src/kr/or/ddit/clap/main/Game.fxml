<AnchorPane prefHeight="223.0" prefWidth="398.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kr.or.ddit.clap.main.GameController">
   <children>
      <StackPane>
         <children>
            <ImageView fitHeight="222.0" fitWidth="397.0" pickOnBounds="true">
               <image>
                  <Image url="@../../../../../../img/game.jpg" />
               </image>
               <effect>
                  <MotionBlur angle="9.38" radius="30.0">
                     <input>
                        <ColorAdjust brightness="0.25" contrast="0.21" hue="0.11" saturation="0.23" />
                     </input>
                  </MotionBlur>
               </effect>
            </ImageView>
         </children>
      </StackPane>
      <VBox alignment="CENTER" prefHeight="222.0" prefWidth="397.0">
         <children>
            <Label text="노래 맞추기">
               <font>
                  <Font name="-윤고딕350" size="15.0" />
               </font>
            </Label>
            <Label text="전주 3초를 듣고 노래 제목과 가수를 맞혀주세요!!!">
               <font>
                  <Font name="-윤고딕330" size="12.0" />
               </font>
