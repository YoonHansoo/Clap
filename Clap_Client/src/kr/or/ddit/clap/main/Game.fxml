               <font>
                  <Font name="-윤고딕330" size="13.0" />
               </font>
            </Label>
            <Label text="상품은 OOO입니다.">
               <font>
                  <Font name="-윤고딕330" size="12.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <JFXButton fx:id="btn_play" ripplerFill="#9c0000" text="">
                     <graphic>
                        <FontAwesomeIcon fill="#090948" iconName="PLAY" size="25" />
                     </graphic>
                  </JFXButton>
                  <JFXSlider fx:id="slider_time" style="-fx-background-inner-background: black;" />
                  <Label fx:id="label_endTime" text="00:00" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label text="노래">
                     <font>
                        <Font name="-윤고딕320" size="12.0" />
                     </font>
                  </Label>
                  <JFXTextField fx:id="tf_musName" focusColor="#9c0000" />
                  <Label text="가수">
                     <font>
                        <Font name="-윤고딕320" size="12.0" />
                     </font>
                  </Label>
                  <JFXTextField fx:id="tf_singerName" focusColor="#9c0000" />
                  <JFXButton fx:id="btn_true" ripplerFill="#9c0000" text="정답">
                     <font>
                        <Font name="-윤고딕330" size="12.0" />
                     </font></JFXButton>
               </children>
